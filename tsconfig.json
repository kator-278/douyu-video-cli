{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "Node16",
    "target": "es2022",
    "downlevelIteration": true,
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "Node16",
    "importHelpers": true,
    "lib": ["es5", "scripthost", "es2015", "es2020", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*"]
}
